---
import ContentList from '../../components/ui/ContentList.astro';
import { getSortedNewsPosts } from '../../features/news/services/news';
import ListLayout from '../../layouts/ListLayout.astro';

const sortedPosts = await getSortedNewsPosts();
---

<ListLayout
  pageTitle="News - Bridge mit Alexander"
  title="News"
  intro="Bridge-Tipps und Neuigkeiten"
  maxWidth="max-w-3xl"
  isEmpty={sortedPosts.length === 0}
>
  <ContentList items={sortedPosts} imagePosition="left" showArrow={true} />
</ListLayout>
