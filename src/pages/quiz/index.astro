---
import ContentList from '../../components/ui/ContentList.astro';
import { getSortedQuizzes } from '../../features/quiz/services/quizzes';
import ListLayout from '../../layouts/ListLayout.astro';

const quizzes = await getSortedQuizzes();
---

<ListLayout
  pageTitle="Quiz - Bridge mit Alexander"
  title="Quiz"
  intro="Testen Sie Ihr Bridge-Wissen mit unseren Fragen"
  maxWidth="max-w-3xl"
  isEmpty={quizzes.length === 0}
>
  <ContentList items={quizzes} showArrow={true} />
</ListLayout>
