---
/**
 * NewsBanner
 * Generic banner component that displays a title and links to a specified URL.
 */
interface Props {
  title?: string;
  link?: string;
  class?: string;
}

const { title, link, class: extraClass = '' } = Astro.props;
---

{
  title && link && (
    <div class={`max-w-4xl mx-auto mt-8 mb-4 px-4 md:mt-10 ${extraClass}`}>
      <a
        href={link}
        class="block group bg-white border-[3px] border-black rounded-xl p-3 md:p-4 shadow-[6px_6px_0_#000] hover:shadow-[10px_10px_0_#000] hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200 active:shadow-[2px_2px_0_#000] active:translate-x-1 active:translate-y-1"
      >
        <div class="flex items-center gap-3 md:gap-4">
          <div class="inline-flex items-center justify-center px-3 py-1 font-bold text-xs md:text-sm border-[3px] border-black rounded-md bg-[var(--blue,#96c7f2)]">
            Neu
          </div>
          <p class="text-sm font-bold text-black truncate transition-colors md:text-base group-hover:text-[var(--blue,#1e3a8a)]">
            {title}
          </p>
          <i class="ri-arrow-right-line ml-auto text-xl opacity-0 -translate-x-2 transition-all group-hover:opacity-100 group-hover:translate-x-0" />
        </div>
      </a>
    </div>
  )
}
